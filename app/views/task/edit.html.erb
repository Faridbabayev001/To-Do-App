<h1 style="text-align: center">Edit task</h1>

<div class="ui container">
  <% flash.each do |key, value| %>
      <div class="ui <%= flash_class(key) %> message">
        <i class="close icon"></i>
        <div class="header">
          <%= value %>
        </div>
      </div>
  <% end %>
  <%= form_for(@task,url: task_update_path(@task.id), :html => {:class => 'ui form'}) do |f| %>
      <div class="field">
        <label>Task name</label>
        <%= f.text_field :name %>
      </div>
      <div class="field">
        <label>Task description</label>
        <%=	 f.text_area :description %>
      </div>
      <div class="field">
        <label>Task deadline</label>
        <%=	datetime_field("task", "deadline", min: Date.today) %>
      </div>
      <div class="field">
        <label>Task status</label>
        <%= f.select(:status, options_for_select([["True", "1"], ["False", "0"]], convert_status_text_to_number(f.object.status))) %>
      </div>
      <%= f.submit "Edit task", :class => "ui button" %>
  <%	end  %>
</div>