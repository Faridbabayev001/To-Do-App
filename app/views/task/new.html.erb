<h1 style="text-align: center">Create new task</h1>
<div class="ui container">
  <%= form_for(@task,url: task_create_path, :html => {:class => 'ui form'}) do |f| %>
    <div class="field">
      <label>Task name</label>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <label>Task description</label>
      <%=	 f.text_area :description %>
    </div>
      <div class="field">
      <label>Task deadline</label>
        <%=	datetime_field("task", "deadline", min: Date.today) %>
    </div>
      <%= f.submit "Create task", :class => "ui button" %>
  <%	end  %>
</div>