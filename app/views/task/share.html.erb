<h1 style="text-align: center">Share "<%= @task.name %>" task</h1>

<div class="ui container">
  <% flash.each do |key, value| %>
      <div class="ui <%= flash_class(key) %> message">
        <i class="close icon"></i>
        <div class="header">
          <%= value %>
        </div>
      </div>
  <% end %>
  <%= form_for(:anything,url: share_task_user_path(@task.id), :html => {:class => 'ui form'}) do |f| %>
      <div class  ="field">
        <label>To</label>
        <%= f.text_field :user %>
      </div>
      <div class="field">
        <label>Share type</label>
        <%= f.select(:type, options_for_select([["Can write comment", "1"], ["Only view", "0"]])) %>
      </div>
      <%= f.submit "Share task", :class => "ui button" %>
  <%	end %>
</div>